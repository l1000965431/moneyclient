<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff1f1f1"
    android:orientation="vertical"
    android:id="@+id/fragment_login">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/fragment_login_Enter_account"
        android:textColor="#ff999999"
        android:textColorHint="#ff999999"
        android:hint="输入账号"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded10"
        android:backgroundTint="#ffffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/fragment_login_Enter_password"
        android:layout_alignLeft="@+id/fragment_login_Enter_password"
        android:layout_alignStart="@+id/fragment_login_Enter_password"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/fragment_login_Enter_password"
        android:textColor="#ff999999"
        android:textColorHint="#ff999999"
        android:hint="输入登陆密码"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded10"
        android:backgroundTint="#ffffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/fragment_login_button"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_button"
        android:layout_alignRight="@+id/fragment_login_Enter_password"
        android:layout_alignEnd="@+id/fragment_login_Enter_password"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="登陆"
            android:id="@+id/fragment_login_button_login"
            android:textSize="15dp"
            android:background="@drawable/bg_rounded10blue"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffffff"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/fragment_login_buttonlogin"
            android:layout_toLeftOf="@+id/fragment_login_buttonlogin"
            android:layout_toStartOf="@+id/fragment_login_buttonlogin"
            android:layout_marginEnd="22dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="注册"
            android:id="@+id/fragment_login_button_Register"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:background="@drawable/bg_rounded10blue"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffffff"
            android:layout_above="@+id/fragment_login_orline"
            android:layout_toLeftOf="@+id/fragment_login_button_ForgotPassword"
            android:layout_toStartOf="@+id/fragment_login_button_ForgotPassword"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="忘记密码"
            android:id="@+id/fragment_login_button_ForgotPassword"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff959595"
            android:layout_alignBottom="@+id/fragment_login_buttonlogin"
            android:layout_alignRight="@+id/fragment_login_Enter_password"
            android:layout_alignEnd="@+id/fragment_login_Enter_password" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条款和隐私政策"
        android:id="@+id/textView10"
        android:textColor="#ff1a4b5f"
        android:textSize="17dp"
        android:paddingRight="3dp"
        android:paddingLeft="7dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京龙眼科技有限公司 版权所有"
        android:id="@+id/textView11"
        android:textColor="#ff332b38"
        android:textSize="12dp"
        android:paddingRight="3dp"
        android:paddingLeft="7dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_above="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyrightⓒ2015"
        android:id="@+id/textView12"
        android:textColor="#ff332b38"
        android:textSize="12dp"
        android:paddingRight="3dp"
        android:paddingLeft="7dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
