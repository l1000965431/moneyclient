            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="7dp"
            android:paddingTop="17dp"
            android:paddingRight="7dp"
            android:paddingBottom="17dp"
            android:background="#ff1e1e1e">

            <com.dragoneye.money.view.DotViewPager
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:id="@+id/investment_project_detail_dot_viewpager"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="7dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/linearLayout15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="第3期 众筹中"
                            android:id="@+id/textView2"
                            android:textSize="17dp"
                            android:textColor="#ff767676"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="收益时间："
                                android:id="@+id/textView3"
                                android:textSize="13dp"
                                android:textColor="#ff767676"
                                android:textIsSelectable="false"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="（尚未达成）"
                                android:id="@+id/textView4"
                                android:textSize="13dp"
                                android:textColor="#ff767676"
                                android:textIsSelectable="false"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="1"
                                android:id="@+id/textView5"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="月，"
                                android:id="@+id/textView6"
                                android:textSize="15dp"
                                android:textColor="#ff767676"
                                android:textIsSelectable="false"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="3"
                                android:id="@+id/textView7"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="日，"
                                android:id="@+id/textView8"
                                android:textSize="15dp"
                                android:textColor="#ff767676"
                                android:textIsSelectable="false"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="14:00"
                                android:id="@+id/textView9"
                                android:textSize="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="点"
                                android:id="@+id/textView10"
                                android:textSize="15dp"
                                android:textColor="#ff767676"
                                android:textIsSelectable="false"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="您已入资：12487￥"
                        android:id="@+id/textView11"
                        android:textSize="13dp"
                        android:textColor="#ff767676"
                        android:textIsSelectable="false"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_alignTop="@+id/linearLayout15"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
