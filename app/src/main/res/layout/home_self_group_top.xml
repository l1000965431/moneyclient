<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/home_investment_listview_detail_late">

    <!--<View-->
        <!--android:id="@+id/statusBarBackground"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/investment_ll_fallowPanel">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="20dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/imageView2"
                        android:src="@mipmap/icon_rmb"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="钱包余额：￥999"
                        android:id="@+id/charge_tv_wallet_balance"
                        android:textSize="17dp"
                        android:textColor="#ff585858"
                        android:textIsSelectable="false"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingBottom="20dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="30dp"
                        android:visibility="visible"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView6"
                            android:src="@mipmap/icon_editor"
                            android:tint="#ff35240f"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="输入您的充值金额："
                            android:id="@+id/textView13"
                            android:textSize="15dp"
                            android:textColor="#ff7c7c7c"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/charge_activity_et_chargeNum"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:inputType="number"
                            android:textColor="#ff7c7c7c" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="确定"
            android:id="@+id/invest_project_tv_confirm"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:background="#ffff4057"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff2a2a2a"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</RelativeLayout>
