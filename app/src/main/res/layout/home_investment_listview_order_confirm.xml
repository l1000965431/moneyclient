<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_investment_listview_detail_late"
    android:background="#99232323"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout23"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff1e1e1e">


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="5dp"
                android:paddingTop="7dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="您已入资  XXXXXX  项目"
                        android:id="@+id/payment_tv_stageInfo"
                        android:textSize="17dp"
                        android:textColor="#ff767676"
                        android:textIsSelectable="false"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ff868686"
            android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="17dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="入资总金额："
                            android:id="@+id/textView26"
                            android:textSize="15dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="00"
                            android:id="@+id/payment_tv_totalPrice"
                            android:textSize="17dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="购买期数："
                            android:id="@+id/textView19"
                            android:textSize="15dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="40dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="00"
                            android:id="@+id/payment_tv_stageNum"
                            android:textSize="17dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="总计："
                            android:id="@+id/textView22"
                            android:textSize="15dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="70dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="00"
                            android:id="@+id/textView24"
                            android:textSize="17dp"
                            android:textColor="#ffffffff"
                            android:textIsSelectable="false"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="您已成功入资，项目收益我会在项目筹款过程中随时发放；请注意查收"
                android:id="@+id/textView25"
                android:textSize="15dp"
                android:textColor="#ffe0e0e0"
                android:textIsSelectable="false"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="确定"
        android:id="@+id/payment_tv_goToPay"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:background="#ffff4057"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ff2a2a2a"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout23"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
