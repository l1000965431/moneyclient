<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/home_investment_list_view_root"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/honm_record_earning_ll_top"
        android:background="#ffffffff">
        android:layout_height="fill_parent"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:id="@+id/home_record_earning_iv_projectLogo"
            android:src="@mipmap/icon_albums"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/label_bg2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="卡西欧游戏机"
                android:id="@+id/home_record_earning_tv_projectName"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NEW"
                android:id="@+id/home_record_earning_tv_new"
                android:textColor="#ff79ff19"
                android:textSize="15dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="7dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout17"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="第20期"
                    android:id="@+id/home_record_earning_tv_stageIndex"
                    android:textSize="17dp"
                    android:textColor="#ff767676"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:paddingLeft="7dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="(201212.12.12)"
                        android:id="@+id/home_record_earning_tv_date"
                        android:textSize="13dp"
                        android:textColor="#ff767676"
                        android:textIsSelectable="false"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:id="@+id/linearLayout19">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/invest_project_invested_earnings"
                    android:id="@+id/home_record_earning_tv_earningPrice"
                    android:textSize="13dp"
                    android:textColor="#ff767676"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/invest_project_invested_follow"
                android:id="@+id/home_record_earning_tv_earningType"
                android:textSize="11dp"
                android:textColor="#ff767676"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_below="@+id/linearLayout19"
                android:layout_alignLeft="@+id/linearLayout19"
                android:layout_alignStart="@+id/linearLayout19" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
