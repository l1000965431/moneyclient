<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/home_invest_main_tab"
        android:background="#ff292929"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/home_invest_top_tab_ll_normal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:id="@+id/home_invest_top_tab_ll_normal_iv_dot"
                android:src="@mipmap/icon_point"
                android:layout_gravity="center|right"
                android:tint="#ff79ff19"
                android:scaleType="fitXY"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="70dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/home_invert_top_tab_investment_normal"
                android:id="@+id/home_invest_top_tab_ll_normal_tv"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/home_investment_top_button_selected"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/home_invest_top_tab_ll_normal_iv"
                android:layout_gravity="center"
                android:background="@color/home_investment_top_button_selected" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/home_invest_top_tab_ll_preferential" >

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:id="@+id/home_invest_top_tab_ll_preferential_iv_dot"
                android:src="@mipmap/icon_point"
                android:layout_gravity="center|right"
                android:tint="#ff79ff19"
                android:scaleType="fitXY"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="70dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/home_invert_top_tab_investment_preferential"
                android:id="@+id/home_invest_top_tab_ll_preferential_tv"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/home_investment_top_button_unselected"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/home_invest_top_tab_ll_preferential_iv"
                android:layout_gravity="center"
                android:background="@color/home_investment_top_button_selected"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_invest_main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_invest_main_tab"/>

</RelativeLayout>
