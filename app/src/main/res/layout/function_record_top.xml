<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/function_switch_bottom"
        android:background="#ff292929"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/home_record_top_tab_ll_incoming">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/home_invert_top_tab_earnings_record"
                android:id="@+id/home_record_top_tab_ll_incoming_tv"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/home_investment_top_button_selected"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/home_record_top_tab_ll_incoming_iv"
                android:layout_gravity="center"
                android:background="@color/home_investment_top_button_selected" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/home_record_top_tab_ll_investment" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/home_invert_top_tab_investment_record"
                android:id="@+id/home_record_top_tab_ll_investment_tv"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/home_investment_top_button_unselected"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/home_record_top_tab_ll_investment_iv"
                android:layout_gravity="center"
                android:background="@color/home_investment_top_button_selected"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <com.dragoneye.money.view.RefreshableView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/function_switch_bottom"
        android:id="@+id/home_record_refreshable_view"
        >
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/home_record_list_view"
            android:layout_centerHorizontal="true"/>
    </com.dragoneye.money.view.RefreshableView>

</RelativeLayout>
