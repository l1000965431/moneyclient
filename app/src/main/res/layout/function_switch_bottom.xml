<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:id="@+id/function_switch_bottom">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0487de"
        android:layout_weight="1"
        android:id="@+id/function_switch_bottom_button_investment">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/function_switch_bottom_button_investment_imageView"
            android:src="@mipmap/button_investment"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="投资"
            android:id="@+id/function_switch_bottom_button_investment_textView"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="#ffffffff"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0681d3"
        android:layout_weight="1"
        android:id="@+id/function_switch_bottom_button_record" >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/function_switch_bottom_button_record_imageView"
            android:src="@mipmap/button_record"
            android:layout_gravity="center"
            android:tint="#ff62ade6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="记录"
            android:id="@+id/function_switch_bottom_button_record_textView"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="#ff62ade6"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0487de"
        android:layout_weight="1"
        android:id="@+id/function_switch_bottom_button_news" >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/function_switch_bottom_button_news_imageView"
            android:src="@mipmap/button_news"
            android:layout_gravity="center"
            android:tint="#ff62ade6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="资讯"
            android:id="@+id/function_switch_bottom_button_news_textView"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="#ff62ade6"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0681d3"
        android:layout_weight="1"
        android:id="@+id/function_switch_bottom_button_me" >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:id="@+id/function_switch_bottom_button_me_imageView"
            android:src="@mipmap/button_me"
            android:layout_gravity="center"
            android:tint="#ff62ade6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="投资"
            android:id="@+id/function_switch_bottom_button_me_textView"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textColor="#ff62ade6"
            android:paddingBottom="3dp" />
    </LinearLayout>

</LinearLayout>
