<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/home_news"
    android:paddingLeft="7dp"
    android:paddingTop="17dp"
    android:paddingRight="7dp"
    android:paddingBottom="17dp"
    android:background="#ffffffff">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/home_news_Headlines">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/home_news_Headlines_imageView"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_albums"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="这款 WESTERN BAR 是其中一款，它是以西部牛仔为主题的射击游戏；另外还有“Great Racer”以及“Space Attacker”款式."
            android:id="@+id/home_news_Headlines_textView"
            android:textSize="13dp"
            android:padding="8dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#96000000" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe2e2e2"
        android:layout_gravity="center"
        android:id="@+id/home_news_Second"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="这款 WESTERN BAR 是其中一款，它是以西部牛仔为主题的射击游戏；另外还有“Great Racer”以及“Space Attacker”款式."
            android:id="@+id/home_news_Second_textView"
            android:textSize="13dp"
            android:padding="8dp"
            android:textColor="#ff2d2d2d"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/home_news_Second_imageView"
            android:src="@mipmap/icon_albums"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe2e2e2"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:id="@+id/home_news_Third"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="这款 WESTERN BAR 是其中一款，它是以西部牛仔为主题的射击游戏；另外还有“Great Racer”以及“Space Attacker”款式."
            android:id="@+id/home_news_Third_textView"
            android:textSize="13dp"
            android:padding="8dp"
            android:textColor="#ff2d2d2d"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/home_news_Third_imageView"
            android:src="@mipmap/icon_albums"
            android:scaleType="fitXY"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

</LinearLayout>
